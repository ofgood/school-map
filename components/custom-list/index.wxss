.list-wrap{
    padding-bottom: 80px;
}
.list-item{
    border-bottom: 1px solid #DDDDDD;
    padding: 5px 10px 12px;
}
.list-item:last-child{
    border-bottom: none;
}
.list-item.list-item-hover{
    opacity: 0.7;
    background: #f7f7f7;
}
.list-item-top{
    display: flex;
    justify-content: space-between;
}
.item-top-left{
    display: flex;
}
.item-top-title{
    display: flex;
    flex-direction: column;
}
.item-top-name{
    font-size: 18px;
    display: flex;
}
.item-top-distance{
    display: flex;
    font-size: 12px;
    color: #333333;
}
.item-top-distance .distance-icon{
    width: 20px;
    height: 20px;
    margin-right: 4px;
}
.item-top-tip{
    margin-left: 10px;
    width: 26px;
    height: 26px;
    border-radius: 100px;
    background-color: #BEECF8;
    text-align: center;
    line-height: 26px;
    font-size: 18px;
    color: #0092B6;
}
.item-top-right{
    display: flex;
    flex-direction: column;
    font-size: 12px;
    color: #666666;
    align-items: center;
}
.item-top-right.suited-hover{
    opacity: 0.7;
}
.item-top-right .top-right-icon{
    width: 20px;
    height: 20px;
    margin-bottom: 4px;
}
.list-item-bottom{
    display: flex;
    padding-top: 10px;
}
.list-item-bottom .list-icon{
    width: 80px;
    height: 80px;
    border-radius: 4px;
}
