.box{
    margin: 40rpx 32rpx;
}
.paragraph-box{
    width: 100%;
    font-size: 30rpx;
    font-weight: 400;
    color: rgba(87,105,123,1);
    line-height: 48rpx;
}
.textFour_box{
    width: 100%;
    font-size: 14px;
    font-weight: 400;
    color: #333;
    line-height: 24px;
    text-align: justify;
}
.toggle-icon {
    width: 25rpx;
    height: 25rpx;
}
.text_toggloe_box{
    display: -webkit-box;
    display: -webkit-flex;
    flex-direction: row;
    align-items: center;
    margin: 10rpx 0;
}
.text_toggle_box{
    position: relative;
    height: 20px;
}
.text_toggle_text{
    position: absolute;
    right: 10px;
    top: 0;
    font-size: 12px;
    color: #27A1BB;
}
.three{
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    line-clamp: 3;
    -webkit-box-orient: vertical;
}
