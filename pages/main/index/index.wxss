page {
  background: #F7F8FA;
}
page .title {
  margin-top: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.cover-view {
  /* position: absolute;
  right: 40rpx;
  left: 40rpx;
  bottom: 30rpx; */
